
@{
    ViewBag.Title = "PageError";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- page 404 -->
<div class="page-404 section--bg" data-bg="~/Content/img/section/section.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="page-404__wrap">
                    <div class="page-404__content">
                        <h1 class="page-404__title">@Response.StatusCode</h1>
                        <p class="page-404__text">Aradığınız sayfa bulunamadı!</p>
                        <a href="/Anasayfa" class="page-404__btn">Ana Sayfaya Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end page 404 -->
